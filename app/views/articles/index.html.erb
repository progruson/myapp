<% provide(:title, 'News') %>
<h1>Все публикации</h1>

<hr />

<div class="row">
  <div class="col-md-8">
    <% if @articles.empty? %>
        <p>Статьи не найдены...</p>
    <% end %>
    <% @articles.each do |article| %>
        <h3><%= article.title %></h3>

        <% if article.image_src %>
            <p><%= link_to image_tag(article.image_src, width: '100%'), article_path(article) %></p>
        <% end %>
        <div class="text-justify">
          <%== article.text_preview %>
        </div>

        <button class="btn btn-primary" type="button">
          Комментарии <span class="badge"><%= article.comments.size %></span>
        </button>

        <!--Комментарии: <span class="badge badge-notify"><%= article.comments.size %></span>-->
        <div class="text-right"><%= link_to 'Читать далее', article_path(article), class: "btn btn-primary" %></div>
        <hr />

    <% end %>

    <div class="text-center"><%= will_paginate %></div>

  </div>
  <div class="col-md-4">
    <h3>Категории</h3>
    <hr />

    <div class="list-group">
      <% @categories.each do |category| %>
          <%= link_to category.title, category_path(category), class: "list-group-item" %>
      <% end %>
    </div>

  </div>
</div>